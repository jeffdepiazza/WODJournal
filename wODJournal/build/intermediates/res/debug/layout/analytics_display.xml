<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/analytics_rep_max_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/analytics_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/analytics_rep_max_spinner"
        android:text="@string/Graph_This" />

    <LinearLayout
        android:id="@+id/analytics_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/analytics_rep_max_spinner"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/analytics_nothing_to_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/NothingToDisplay"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout><!-- From: file:/C:/projects/WODJournal/wODJournal/src/main/res/layout/analytics_display.xml -->