<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/cell_bg">

    <com.roomorama.caldroid.CellView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/calendar_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?styleCaldroidNormalCell" />

    <ImageView
        android:id="@+id/calendar_kettlebell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/kettlebell"
        android:visibility="gone" />

</LinearLayout>